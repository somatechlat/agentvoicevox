{
  "billable_metrics": [
    {
      "name": "API Requests",
      "code": "api_requests",
      "description": "Number of API requests made to the voice agent platform",
      "aggregation_type": "count_agg",
      "field_name": null,
      "recurring": false
    },
    {
      "name": "Audio Minutes Input",
      "code": "audio_minutes_input",
      "description": "Minutes of audio input processed (speech-to-text)",
      "aggregation_type": "sum_agg",
      "field_name": "duration_minutes",
      "recurring": false
    },
    {
      "name": "Audio Minutes Output",
      "code": "audio_minutes_output",
      "description": "Minutes of audio output generated (text-to-speech)",
      "aggregation_type": "sum_agg",
      "field_name": "duration_minutes",
      "recurring": false
    },
    {
      "name": "LLM Input Tokens",
      "code": "llm_tokens_input",
      "description": "Number of tokens sent to LLM for processing",
      "aggregation_type": "sum_agg",
      "field_name": "token_count",
      "recurring": false
    },
    {
      "name": "LLM Output Tokens",
      "code": "llm_tokens_output",
      "description": "Number of tokens generated by LLM",
      "aggregation_type": "sum_agg",
      "field_name": "token_count",
      "recurring": false
    },
    {
      "name": "Concurrent Connections",
      "code": "concurrent_connections",
      "description": "Peak concurrent WebSocket connections",
      "aggregation_type": "max_agg",
      "field_name": "connection_count",
      "recurring": false
    },
    {
      "name": "Connection Minutes",
      "code": "connection_minutes",
      "description": "Total minutes of active WebSocket connections",
      "aggregation_type": "sum_agg",
      "field_name": "duration_minutes",
      "recurring": false
    }
  ]
}
