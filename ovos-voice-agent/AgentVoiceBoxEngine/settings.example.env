# Flask
FLASK_ENV=development
APP_SECRET_KEY=change-me

# Postgres
DATABASE__URI=postgresql+psycopg://voice_agent:voice_agent@localhost:5432/voice_agent
DATABASE__POOL_SIZE=10
DATABASE__MAX_OVERFLOW=20
DATABASE__ECHO=false

# Kafka
KAFKA__BOOTSTRAP_SERVERS=localhost:9092
KAFKA__CLIENT_ID=ovos-voice-agent
KAFKA__SECURITY_PROTOCOL=PLAINTEXT
# KAFKA__SASL_MECHANISM=SCRAM-SHA-512
# KAFKA__SASL_USERNAME=
# KAFKA__SASL_PASSWORD=

# OPA
OPA__URL=http://localhost:8181
OPA__DECISION_PATH=/v1/data/voice/allow
OPA__TIMEOUT_SECONDS=3

# Security / Auth
SECURITY__PROJECT_API_KEYS__voiceengine-dev=sk-voiceengine-dev-token
SECURITY__DEFAULT_SECRET_TTL_SECONDS=600
SECURITY__RATE_LIMITS__REQUESTS_PER_MINUTE=60
SECURITY__RATE_LIMITS__TOKENS_PER_MINUTE=120000

# Observability
OBSERVABILITY__SERVICE_NAME=ovos-voice-agent
OBSERVABILITY__LOG_LEVEL=INFO
OBSERVABILITY__PROMETHEUS_NAMESPACE=ovos
# OBSERVABILITY__SENTRY_DSN=
# OBSERVABILITY__ENABLE_TRACING=true
