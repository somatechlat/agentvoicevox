# ==========================================================================
# AgentVoiceBox Docker Deployment Environment Configuration
# Copy this file to .env and fill in the values
# ==========================================================================

# ==========================================================================
# EXTERNAL SERVICE URLS (for browser access)
# ==========================================================================
# These are the URLs you'll use in your browser
EXTERNAL_DJANGO_API_URL=http://localhost:65020
EXTERNAL_PORTAL_URL=http://localhost:65027
EXTERNAL_KEYCLOAK_URL=http://localhost:65006

# ==========================================================================
# LLM PROVIDER API KEYS (Required for LLM Worker)
# ==========================================================================
# At least one provider should be configured
GROQ_API_KEY=
OPENAI_API_KEY=
OLLAMA_BASE_URL=http://host.docker.internal:11434

# ==========================================================================
# DJANGO SECRET KEY (Production: Use strong random key)
# ==========================================================================
DJANGO_SECRET_KEY=dev-secret-key-for-local-development-only-at-least-50-characters

# ==========================================================================
# DATABASE CREDENTIALS
# ==========================================================================
DB_PASSWORD=avb_secure_2024

# ==========================================================================
# KEYCLOAK ADMIN CREDENTIALS
# ==========================================================================
KEYCLOAK_ADMIN_PASSWORD=adminpassword123

# ==========================================================================
# OBSERVABILITY (Optional)
# ==========================================================================
# SENTRY_DSN=https://your-sentry-dsn

# ==========================================================================
# ADVANCED CONFIGURATION (Optional - defaults in docker-compose.yml)
# ==========================================================================

# LLM Configuration
LLM_DEFAULT_PROVIDER=groq
LLM_DEFAULT_MODEL=llama-3.3-70b-versatile
LLM_MAX_CONTEXT_TOKENS=8192

# STT Configuration
STT_MODEL=base
STT_DEVICE=cpu
STT_COMPUTE_TYPE=int8

# TTS Configuration
TTS_DEFAULT_VOICE=af_heart
TTS_DEFAULT_SPEED=1.0

# Rate Limiting
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_API_KEY=120
REALTIME_REQUESTS_PER_MINUTE=100

# CORS (for local development)
CORS_ALLOWED_ORIGINS=http://localhost:65027,http://localhost:5173,http://localhost:3000,http://localhost:65020,http://localhost:65006

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
