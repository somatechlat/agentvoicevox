# ==========================================================================
# LAGO BILLING - Environment Configuration
# ==========================================================================
# Copy this file to .env and customize values for your environment

# ==========================================================================
# DATABASE
# ==========================================================================
POSTGRES_USER=lago
POSTGRES_PASSWORD=lago_secure_2024
POSTGRES_DB=lago

# ==========================================================================
# RAILS SECRETS
# ==========================================================================
# IMPORTANT: Generate new values for production!
# Use: openssl rand -hex 64
SECRET_KEY_BASE=lago_secret_key_base_production_2024_change_in_production

# ==========================================================================
# ENCRYPTION KEYS
# ==========================================================================
# IMPORTANT: Generate new 32-character keys for production!
# Use: openssl rand -hex 16
ENCRYPTION_PRIMARY_KEY=lago_primary_encryption_key_32_chars
ENCRYPTION_DETERMINISTIC_KEY=lago_deterministic_key_32_chars
ENCRYPTION_KEY_DERIVATION_SALT=lago_key_derivation_salt_32_chars

# ==========================================================================
# PUBLIC URLs (Port Range: 63690-63699)
# ==========================================================================
LAGO_API_URL=http://localhost:63690
LAGO_FRONT_URL=http://localhost:63691

# ==========================================================================
# SMTP (for sending invoices)
# ==========================================================================
LAGO_FROM_EMAIL=billing@your-domain.com
SMTP_ADDRESS=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-user
SMTP_PASSWORD=your-smtp-password

# ==========================================================================
# LAGO LICENSE (empty for open-source)
# ==========================================================================
LAGO_LICENSE=

# ==========================================================================
# OPTIONAL: Sentry Error Tracking
# ==========================================================================
SENTRY_DSN=

# ==========================================================================
# OPTIONAL: OAuth Providers
# ==========================================================================
LAGO_OAUTH_PROVIDERS=
