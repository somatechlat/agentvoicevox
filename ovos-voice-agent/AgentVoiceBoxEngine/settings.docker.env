FLASK_ENV=production
APP_SECRET_KEY=change-me-in-production

# Database configuration
DATABASE__URI=postgresql+psycopg://voice_agent:voice_agent@db:5432/voice_agent
DATABASE__POOL_SIZE=5
DATABASE__MAX_OVERFLOW=5
DATABASE__ECHO=false

# Redis configuration
REDIS__URL=redis://redis:6379/0

# Kafka configuration
KAFKA__BOOTSTRAP_SERVERS=kafka:9092
KAFKA__CLIENT_ID=voice-engine-api
KAFKA__SECURITY_PROTOCOL=PLAINTEXT

# OPA configuration
OPA__URL=http://opa:8181
OPA__DECISION_PATH=/v1/data/voice/allow
OPA__TIMEOUT_SECONDS=3

# Security configuration
SECURITY__PROJECT_API_KEYS__voiceengine-local=sk-local-token
SECURITY__DEFAULT_SECRET_TTL_SECONDS=600
SECURITY__RATE_LIMITS__REQUESTS_PER_MINUTE=60
SECURITY__RATE_LIMITS__TOKENS_PER_MINUTE=120000

# Observability configuration
OBSERVABILITY__SERVICE_NAME=voice-engine-api
OBSERVABILITY__LOG_LEVEL=INFO
OBSERVABILITY__PROMETHEUS_NAMESPACE=ovos

# Keycloak configuration
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=agentvoicebox
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Lago configuration
LAGO_API_URL=http://lago-api:3000
